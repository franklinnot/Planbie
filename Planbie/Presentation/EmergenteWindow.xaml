<Window x:Class="Presentation.EmergenteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="EmergenteWindow" Height="100" Width="500">

    <Window.Resources>
        <FontFamily x:Key="Outfit">/Presentation;component/Resources/#Outfit Regular</FontFamily>
        <FontFamily x:Key="Outfit-SemiBold">/Presentation;component/Resources/#Outfit SemiBold</FontFamily>
        <local:TimeAxisLabelConverter x:Key="TimeAxisLabelConverter"/>
    </Window.Resources>

    <Grid Background="#FF2B2B2B" RenderTransformOrigin="0.5,0.412">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Margin="0,0,0,88">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Content="Button" HorizontalAlignment="Left" Height="0" Margin="146,67,0,0" VerticalAlignment="Top"/>
        </Grid>


        <!-- Etiqueta para el ComboBox -->
        <TextBlock Grid.Row="0" Margin="10" VerticalAlignment="Center">Seleccionar Puerto:</TextBlock>

        <!-- ComboBox - seleccionar puerto -->
        <ComboBox x:Name="cmbPuertos" Grid.Row="1" Width="297" Height="30" 
                  HorizontalAlignment="Right" Margin="0,2,144,0" VerticalAlignment="Top" Background="#FF6F6F6F" BorderBrush="White">
        </ComboBox>

        <!-- ABRRRRIR Puerto :,D -->
        <Button Grid.Row="1" Content="..." Width="41" Height="30" 
                HorizontalAlignment="Left" Margin="371,3,0,26" Click="AbrirPuerto_Click" RenderTransformOrigin="0.57,1.267" Background="#FFF5E85A" BorderBrush="#FFB3A508" Foreground="White"/>

    </Grid>
</Window>
